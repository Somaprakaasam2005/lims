# LIMS environment settings
# Set DATABASE_URI to your MySQL connection string when ready, e.g.:
# mysql+pymysql://user:password@localhost:3306/lims_db

# For SQLite (development - default):
DATABASE_URI=sqlite:///lims_dev.db

# For MySQL (production - uncomment and configure):
# DATABASE_URI=mysql+pymysql://user:password@localhost:3306/lims_db

# Flask secret key (change for production)
SECRET_KEY=change-me-for-dev

# Default admin credentials used by bootstrap script (change before production)
ADMIN_USER=admin
ADMIN_PASS=admin

# Optional: development mode
FLASK_ENV=development
FLASK_DEBUG=True

